{
  "name": "lending-platform",
  "version": "1.0.0",
  "description": "A web-based lending platform that allows users to lend or borrow items locally.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "client-install": "cd client && npm install",
    "install-all": "npm install && npm run client-install",
    "dev-all": "concurrently \"npm run dev\" \"npm run client\""
  },
  "author": "kenpachit",
  "dependencies": {
    "express": "^4.17.1",
    "mongoose": "^5.10.9",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "jsonwebtoken": "^8.5.1",
    "bcryptjs": "^2.4.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.4",
    "concurrently": "^5.3.0"
  }
}
